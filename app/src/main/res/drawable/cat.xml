<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#4741D6" android:endColor="#813CD6" android:angle="45"></gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="200dp" android:topRightRadius="200dp"/>
            <solid android:color="#ECE4FF"></solid>
        </shape>
    </item>
    <item  android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">

        <shape android:shape="rectangle">
            <corners android:topLeftRadius="200dp" android:topRightRadius="200dp"/>

            <solid android:color="@color/white"></solid>
        </shape>
    </item>


</layer-list>