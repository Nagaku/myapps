<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ECE4FF"/>
            <corners android:topRightRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:topRightRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
</layer-list>