<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/h11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/foto"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingTop="8dp"
        android:layout_below="@id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_chat">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:paddingTop="8dp"
                android:layout_below="@id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_chat">


                <TextView
                    android:id="@+id/h0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_round_left"
                    android:padding="10dp"
                    android:text="Kamu siapa?"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:textSize="16dp" />

            <TextView
                android:id="@+id/h2"
                android:layout_below="@id/h0"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/not_so_rounded"
                android:padding="10dp"/>


            <TextView
                android:id="@+id/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/h2"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/not_so_round_left"
                android:padding="10dp"
                android:text="Hobby kamu?"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/h4"
                android:layout_below="@id/h3"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bermain Game"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/not_so_rounded"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/h5"
                android:layout_below="@id/h4"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Makanan kesukaanmu?"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/not_so_round_left"
                android:padding="10dp"/>

            <TextView
                android:layout_below="@id/h5"
                android:id="@+id/h6"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mie, nasi goreng, pizza"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/not_so_rounded"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/h7"
                android:layout_below="@id/h6"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minuman kesukaanmu?"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/not_so_round_left"
                android:padding="10dp"/>

                <TextView
                    android:id="@+id/h8"
                    android:layout_below="@id/h7"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jus, susu, soda"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_rounded"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/h9"
                    android:layout_below="@id/h8"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interest kamu saat ini?"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_round_left"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/h10"
                    android:layout_below="@id/h9"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mencoba hal-hal baru"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_rounded"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/h12"
                    android:layout_below="@id/h10"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cita-cita kamu?"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_round_left"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/h13"
                    android:layout_below="@id/h12"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cita-citaku menjadi orang kaya"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_rounded"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/h14"
                    android:layout_below="@id/h13"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel?"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_round_left"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/h15"
                    android:layout_below="@id/h14"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trivago"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/not_so_rounded"
                    android:padding="10dp"/>


                <TextView
                    android:layout_below="@id/h15"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_blue"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="40dp"
                    android:padding="10dp"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>