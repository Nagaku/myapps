<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentProfile"
    android:background="#A980FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/a1"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:padding="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded"
            android:paddingVertical="15dp">

            <Button
                android:id="@+id/callme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/call"
                android:layout_marginHorizontal="10dp"/>


            <Button
                android:id="@+id/mailme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/email"
                android:layout_marginHorizontal="10dp"/>


            <Button
                android:id="@+id/followme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/instagram"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/findme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pin"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/version"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/version"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:background="@color/white">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Call Me"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="right"
                android:textAlignment="gravity"
                android:rotation="-90"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:text="Mail Me"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:rotation="-90"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:text="Follow Me"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:rotation="-90"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:text="Find Me"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:rotation="-90"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:text="Version Me"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textAlignment="center"
                android:rotation="-90"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>