<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourActivity"
    android:background="#A980FA">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/pg21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/a1"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/pg22"
            android:layout_below="@id/pg21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/real_round"
            android:padding="15dp"/>

        <LinearLayout
            android:id="@+id/pg23"
            android:layout_below="@id/pg22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded"
            android:padding="15dp">

            <Button
                android:id="@+id/callme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/call"
                android:layout_marginHorizontal="10dp"/>


            <Button
                android:id="@+id/mailme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/email"
                android:layout_marginHorizontal="10dp"/>


            <Button
                android:id="@+id/followme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/instagram"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/findme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pin"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/version"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/version"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/siap"
            android:layout_above="@id/h8"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/not_so_round_left"
            android:text="SIAP!!!"
            android:textColor="#9D2CB8"
            android:onClick="testo"
            />

        <TextView
            android:id="@+id/h8"
            android:layout_above="@+id/h9"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pada halaman ini tedapat info kontak, Klik siap!!! untuk lanjut ke aplikasi"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            android:background="@drawable/not_so_rounded"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/h9"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bulat_kosong"
                android:layout_marginHorizontal="10dp"></View>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bulat_kosong"></View>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/real_round"
                android:layout_marginHorizontal="10dp"></View>

        </LinearLayout>


    </RelativeLayout>



</FrameLayout>